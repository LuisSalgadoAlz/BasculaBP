model Silos {
  id             Int      @id @default(autoincrement())
  nombre         String
  capacidad      Float?
  estado         Boolean?
  nivelTolva     Float?
  nivelTolvaPermitida Int? /* 1 Solo tolva, 2 solo tolva 2, 3 todos */
  // Inverse relations
  principalDe    Tolva[]  @relation("PrincipalSilo")
  secundarioDe   Tolva[]  @relation("SecundarioSilo")
  terciarioDe    Tolva[]  @relation("TerciarioSilo")

  /* Relacion con los resets */
  resets ResetSilos[]
}

model ResetSilos {
  id        Int    @id @default(autoincrement())
  siloId    Int
  numBoleta Int
  createdAt DateTime @default(now())

  silo      Silos  @relation(fields: [siloId], references: [id])
}
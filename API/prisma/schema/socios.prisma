model Socios{
    id Int @id @default(autoincrement())
    nombre String 
    tipo Int
    telefono String?
    correo String?
    estado Boolean

    /* Relacion con boleta */
    boletaSocios Boleta[]

    /* Relacion con direciones */
    drSocios Direcciones[]

    /* Relacion de Empresa */
    rEmpresa Empresa[]

    /* Relacion con la factura */
    rFactura Facturas[]

}

model Facturas {
    /* Campos principales clave */
    id Int @id
    codigoProveedor String
    Proveedor String
    Cantidad Float
    Proceso Int

    /* Campos de re relaciones */
    idSocio Int
    socio String
    rfSocios Socios? @relation(fields: [idSocio], references: [id])
    
    /* Campos de logs internos */
    createdByUserID Int
    createdByUserName String
    createdAt DateTime @default(now())
}
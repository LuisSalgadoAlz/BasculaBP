model Vehiculo {
    id Int @id @default(autoincrement())
    placa String
    modelo String?
    marca String?
    tipo String
    pesoMaximo Float?
    estado Boolean
    idEmpresa Int

    /* Relaciones con boleta */
    // relación con boletas como "placa principal"
    boletasPlaca Boleta[] @relation("PlacaBoleta")

    // relación con boletas como "furgón"
    boletasFurgon Boleta[] @relation("FurgonBoleta")

    rEmpresaVehiculo Empresa @relation(fields: [idEmpresa], references: [id])
}
